<h1>Grades</h1>

<%= link_to 'New Grade', new_grade_path, class: 'btn btn-primary mb-3' %>

<table class="table">
	<thead>
		<tr>
			<th>Student</th>
			<th>Course</th>
			<th>Grade</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		<% @grades.each do |grade| %>
			<tr>
				<td><%= grade.student&.name %></td>
				<td><%= grade.course&.name %></td>
				<td><%= grade.value %></td>
				<td>
					<%= link_to 'View', grade_path(grade), class: 'btn btn-info btn-sm' %>
					<%= link_to 'Edit', edit_grade_path(grade), class: 'btn btn-warning btn-sm' %>
					<%= link_to 'Delete', grade_path(grade), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>
