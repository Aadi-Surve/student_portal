<h1>Courses</h1>

<%= link_to 'New Course', new_course_path, class: 'btn btn-primary mb-3' %>

<table class="table">
	<thead>
		<tr>
			<th>Name</th>
			<th>Code</th>
			<th>Credits</th>
			<th>Teacher</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		<% @courses.each do |course| %>
			<tr>
				<td><%= course.name %></td>
				<td><%= course.code %></td>
				<td><%= course.credits %></td>
				<td><%= course.teacher&.name %></td>
				<td>
					<%= link_to 'View', course_path(course), class: 'btn btn-info btn-sm' %>
					<%= link_to 'Edit', edit_course_path(course), class: 'btn btn-warning btn-sm' %>
					<%= link_to 'Delete', course_path(course), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>
