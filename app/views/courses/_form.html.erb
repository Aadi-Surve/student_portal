<%= form_with(model: course, local: true) do |f| %>
  <% if course.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(course.errors.count, "error") %> prohibited this course from being saved:</h2>
      <ul>
        <% course.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :code %>
    <%= f.text_field :code, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :credits %>
    <%= f.number_field :credits, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :teacher_id, 'Teacher' %>
    <%= f.collection_select :teacher_id, Teacher.all, :id, :name, include_blank: true, class: 'form-control' %>
  </div>

  <div class="actions mt-3">
    <%= f.submit class: 'btn btn-primary' %>
    <%= link_to 'Back', courses_path, class: 'btn btn-secondary' %>
  </div>
<% end %>
