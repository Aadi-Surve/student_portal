<h1>Teacher Details</h1>

<div class="card">
	<div class="card-body">
		<h5 class="card-title"><%= @teacher.name %></h5>
		<p class="card-text">
			<strong>Email:</strong> <%= @teacher.email %><br>
			<strong>Phone:</strong> <%= @teacher.phone %><br>
			<strong>Subject:</strong> <%= @teacher.subject %>
		</p>
	</div>
</div>

<h2 class="mt-4">Courses</h2>
<table class="table">
	<thead>
		<tr>
			<th>Course</th>
			<th>Code</th>
			<th>Credits</th>
		</tr>
	</thead>
	<tbody>
		<% @teacher.courses.each do |course| %>
			<tr>
				<td><%= link_to course.name, course_path(course) %></td>
				<td><%= course.code %></td>
				<td><%= course.credits %></td>
			</tr>
		<% end %>
	</tbody>
</table>

<div class="mt-3">
	<%= link_to 'Edit', edit_teacher_path(@teacher), class: 'btn btn-warning' %>
	<%= link_to 'Back', teachers_path, class: 'btn btn-secondary' %>
</div>
